<%= render :partial => '/shared/nav' %>
<div class="container white">

    <div class="text-center">
        <%= link_to 'Request an Item',new_item_request_path, class: 'btn btn-success btn-lg' %>
        <%= link_to 'Your Items', items_path, class: 'btn btn-orange btn-lg ' %>
        <%= link_to 'Your Item Requests', item_requests_path, class: 'btn btn-blue btn-lg' %> 
    </div>

   <div class="panel panel-default custom-panel-position" style="width: 65%;">
        <div class="panel-heading text-center">
            <strong> <h4>Recent Activity</strong></h4>
         </div>
        
        <table class="table table-striped" %> 
            <thead>
                <tr>
                <th>Item name</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Requested Date</th>
                <th colspan="3">Action</th>
                </tr>
            </thead>

            <tbody>
                <% if @item_requests.empty? %>
                    <tr>
                        <td colspan= "5">No entries found </td>
                    </tr>
                <% else %>
                    <% @item_requests.order("created_at desc").limit(5).each do |item_request| %>
                        <tr>
                            <td><%= item_request.item %></td>
                            <td><%= item_request.quantity %></td>
                            <td><%= item_request.status %></td>
                            <td><%= item_request.created_at.to_date %></td>
                            <td><%= link_to 'Show', item_request, class: 'btn btn-info' %></td>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
       
    </div>
</div>


